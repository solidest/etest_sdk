
//设备1
device dev1 {
    udp u1 { ip: '127.0.0.1', port: 4000, ttl: 20 }
    udp uu1 { ip: '127.0.0.1', port: 6000 }
}

device dev2 {
    udp u2 { ip: '127.0.0.1', port: 5000 }
    udp uu2 { ip: '127.0.0.1', port: 7000 }
    udp uu3 { ip: '127.0.0.1', port: 8000 }
}

topology deault {
    linking: {
        bus: [dev1.uu1, dev2.uu2, dev2.uu3],    //总线
        ppline: [dev1.u1, dev2.u2],             //点到点连接
    }
    mapping: {
        uut: [dev1],   //被测硬件单元
        etest: [dev2], //软设备
    }
    binding: {
        dev2.u2: 'auto',
        dev2.uu2: 'au to@ localhost',
        dev2.uu3: 'auto@127.0.0.1 '
    }
}

